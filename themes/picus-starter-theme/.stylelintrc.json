{
  "plugins": ["stylelint-scss", "stylelint-order", "stylelint-no-unsupported-browser-features"],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "> 3%",
          "Chrome >= 58",
          "Firefox >= 58",
          "Edge >= 16",
          "Explorer >= 10",
          "Safari >= 11",
          "iOS >= 9.0"
        ],
        "severity": "warning"
      }
    ],
    "order/properties-order": [
      [
        "all",
        "content",
        "box-sizing",
        "will-change",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "width",
        "min-width",
        "max-width",
